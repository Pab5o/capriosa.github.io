<% data.mdwp.post.sort_by {|k,v| v["rid"]}.reverse_each do |post| %>
<section>
  <header>
  <h2><%= post[1]["title"] %></h2>
  </header>
  <%= truncate(post[1]["body"], :length => 190) %>
  <p><a href="/<%= post[1]["slug"] %>">Mehr lesen</a></p>
</section>
<% end %>
